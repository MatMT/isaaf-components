---
import Layout from "../../layouts/Layout.astro";
import HeaderPage from "../../components/HeaderPage.astro";
import CodeDisplay from "../../components/CodeDisplay.astro";
import CodeSection from "../../components/CodeSection.astro";
---

<Layout title="Navegación" navbar={true}>
  <HeaderPage title="Componentes" titleColor="Contenedores">
    En esta página encontrarás diferentes tipos de contenedores, flexibles y
    responsivos.
  </HeaderPage>

  <main class="content">
    <div class="flex flex-col gap-8">
      <h2 class="text-center text-6xl uppercase font-bold">Grid</h2>
      <CodeSection title="Normal">
        <CodeDisplay
          id="normal-container"
          title="Text Inputs"
          descripHTMl="Estático  | <strong>btn-base ...</strong>"
