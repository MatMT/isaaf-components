        />
      </CodeSection>

      <h2 class="text-center text-6xl uppercase font-bold">Flex</h2>

      <CodeSection title="Botones Responsivos">
        <CodeDisplay
          id="responsive-buttons"
          descripHTMl="btn-spc ...."
          descripBlade=""
          htmlCode={`<div class="flex w-full flex-wrap">
