---
import Layout from "../../layouts/Layout.astro";
import HeaderPage from "../../components/HeaderPage.astro";
import CodeDisplay from "../../components/CodeDisplay.astro";
import CodeSection from "../../components/CodeSection.astro";
---

<Layout title="Navegación" navbar={true}>
  <HeaderPage title="Componentes" titleColor="Botones">
    En esta página encontrarás diferentes tipos de botones para diversas
    acciones o usos.
  </HeaderPage>

  <main class="content">
    <div class="flex flex-col gap-8">
      <CodeSection title="Botones Sólidos">
        <CodeDisplay
          id="solid-buttons"
          descripHTMl="Estático  | <strong>btn-base ...</strong>"
          descripBlade="Dinámico | <strong>name*</strong> | [subtmit, reset, successful, delete]"
          htmlCode={`<button class="btn-base submit">submit</button>
<button class="btn-base reset">reset</button>
<button class="btn-base successful"><i class="fi fi-br-check mx-2"></i>succesful</button>
<button class="btn-base delete"><i class="fi fi-br-trash-xmark mx-2"></i>delete</button>`}
          bladeCode={`<x-btn name="btn-ejemplo">Texto</x-btn> `}
        />
      </CodeSection>

      <CodeSection title="Botones Líneales">
        <CodeDisplay
          id="line-buttons"
          descripHTMl="btn-base ...-line"
          descripBlade=""
          htmlCode={`<button class="btn-base submit-line">submit-line</button>
<button class="btn-base reset-line">reset-line</button>
<button class="btn-base successful-line"><i class="fi fi-br-check mx-2"></i>succesful-line</button>
<button class="btn-base delete-line"><i class="fi fi-br-trash-xmark mx-2"></i>delete-line</button>`}
          bladeCode={`Pendiente`}
        />
      </CodeSection>

      <CodeSection title="Botones Especiales">
        <CodeDisplay
          id="especial-buttons"
          descripHTMl="Estático  |"
          descripBlade=""
          htmlCode={`<button class="btn-spc edit-sm"><i class="fi fi-rr-pencil"></i><span>edit-sm</span></button>
<button class="btn-spc delete-sm"><i class="fi fi-rr-trash-xmark"></i><span>edit-sm</span></button>
<button class="btn-spc normal-sm"><i class="fi fi-rr-home"></i></i><span>Home</span></button>`}
          bladeCode={`Pendiente`}
        />
      </CodeSection>

      <CodeSection title="Botones Responsivos">
        <CodeDisplay
          id="responsive-buttons"
          descripHTMl="Estático  |"
          descripBlade=""
          htmlCode={`<button class="btn-spc approved">approved</button>
<button class="btn-spc inprogress">progress</button>
<button class="btn-spc danger">Inactivo</button>`}
          bladeCode={`Pendiente`}
        />
      </CodeSection>
    </div>
  </main>
</Layout>
