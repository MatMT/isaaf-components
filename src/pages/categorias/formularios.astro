---
import Layout from "../../layouts/Layout.astro";
import HeaderPage from "../../components/HeaderPage.astro";
import CodeDisplay from "../../components/CodeDisplay.astro";
import CodeSection from "../../components/CodeSection.astro";
---

<Layout title="Navegación" navbar={true}>
  <HeaderPage title="Componentes" titleColor="Formularios">
    En esta página encontrarás diferentes tipos de inputs, botones y elementos
    para la construcción de formularios.
  </HeaderPage>

  <main class="content">
    <div class="flex flex-col gap-8">
      <CodeSection title="Text & Number">
        <CodeDisplay
          id="textnumber-inputs"
          descripHTMl="Estático  | <strong>btn-base ...</strong>"
          descripBlade=""
          htmlCode={`<form action="" class="fm-base text-sm" method="">
  <div class="group-inputs">
    <div class="">
      <label for="parameter">Parametro</label>
      <input type="text" id="parameter" name="parametro">
    </div>
    <div class="">
      <label for="number">Numero</label>
      <input type="number" id="number" name="numero">
    </div>
</form>`}
          bladeCode={`Pendiente`}
        />
      </CodeSection>

      <CodeSection title="Password">
        <CodeDisplay
          id="password-inputs"
          descripHTMl="btn-base ...-line"
          descripBlade=""
          htmlCode={`<form action="" class="fm-base text-sm" method="">
  <div class="group-inputs">
    <div class="">
      <label for="password">Contraseña</label>
      <input type="password" id="password" name="password">
    </div>
    <div class="">
      <label for="confirm-password">Contraseña</label>
      <input type="password" id="confirm-password" name="confirm-password">
    </div>
</form>`}
          bladeCode={`Pendiente`}
        />
      </CodeSection>

      <CodeSection title="Checkbox">
        <CodeDisplay
          id="checkbox-inputs"
          descripHTMl="btn-spc ...."
          descripBlade=""
          htmlCode={`<form action="" class="fm-base text-sm" method="">
  <div class="group-inputs">
    <div class="sm:col-span-2">
      <span class="">¿Frontend o BackEnd?</span>
        <div class="flex gap-2 text-sm">
          <div class="check-1">
            <input type="checkbox" name="check1" id="check1">
            <label for="check1">Frontend</label>
          </div>
          <div class="check-1">
            <input type="checkbox" id="check" name="check">
            <label for="check">BackEnd</label>
          </div>                        
        </div>
    </div>
  </div>
</form>`}
          bladeCode={`Pendiente`}
        />
      </CodeSection>

      <CodeSection title="Select">
        <CodeDisplay
          id="select-inputs"
          descripHTMl="btn-spc ...."
          descripBlade=""
          htmlCode={`<form action="" class="fm-base text-sm" method="">
  <div class="group-inputs">
    <div class="">
      <label for="select">Selecciona</label>
        <select name="select" id="select">
          <option selected="selected">-- Seleccione --</option>
          <option >Hola</option>
        </select>
      </label>
    </div>
  </div>
</form>`}
          bladeCode={`Pendiente`}
        />
      </CodeSection>

      <CodeSection title="Submit Buttons">
        <CodeDisplay
          id="submit-inputs"
          descripHTMl="btn-spc ...."
          descripBlade=""
          htmlCode={`<form action="" class="fm-base text-sm" method="">
  <!-- Inputs -->
  <div class="group-btn lg:w-1_2 xl:w-1_4 ml-auto">
    <button type="submit" class="btn-base submit"><i class="fi fi-rr-check mr-2"></i>Registrar</button>
    <button type="submit" class="btn-base reset"><i class="fi fi-rr-check mr-2"></i>Registrar</button>
  </div>
</form>`}
          bladeCode={`Pendiente`}
        />
      </CodeSection>
    </div>
  </main>
</Layout>
